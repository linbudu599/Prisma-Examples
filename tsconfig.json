{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext", "ES2018"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": ["src", "prisma-unit-test"],
  "exclude": ["./**/client", "./**/tests"]
}
